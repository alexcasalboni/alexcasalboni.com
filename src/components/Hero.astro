---
import { callsToAction } from '@data/content';
---

<section class="hero glass">
  <div class="copy">
    <p class="eyebrow">Software Engineer · Developer Advocate · Storyteller</p>
    <h1>Crafting stories that turn builders into champions.</h1>
    <p class="lede">
      I design inspiring talks, hands-on demos, and content strategies that help developers ship confidently.
      From early prototypes to enterprise-scale launches.
    </p>
    <div class="actions">
      {callsToAction.map((cta) => (
        <a class:list={[`btn`,`${cta.style}`]} href={cta.href} rel="noopener">{cta.label}</a>
      ))}
    </div>
    <div class="footnote">
      Trusted by global communities, conference organizers, and thousands of builders tuning into livestreams and conference talks.
    </div>
  </div>
  <div class="panel">
    <div class="headshot">
      <img alt="Alex Casalboni" src="/alex-casalboni-headshot.jpg" />
    </div>
  </div>
</section>

<style>
  .hero {
    display: grid;
    gap: 1.75rem;
    grid-template-columns: 1fr;
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid var(--border);
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--muted);
    font-size: 0.85rem;
    margin: 0 0 0.5rem;
  }

  h1 {
    margin: 0 0 1rem;
    font-size: clamp(2.1rem, 3vw + 1rem, 3.2rem);
  }

  .lede {
    color: var(--muted);
    font-size: 1.05rem;
    margin: 0 0 1rem;
  }

  .actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.7rem 1.1rem;
    border-radius: 14px;
    font-weight: 600;
    border: 1px solid var(--border);
    color: var(--text);
  }

  .btn.solid {
    background: linear-gradient(135deg, #7ad7f0, #c792ea);
    color: #0b0f17;
    box-shadow: var(--glow);
    border-color: transparent;
  }

  .btn.ghost {
    background: rgba(255, 255, 255, 0.04);
  }

  .footnote {
    color: var(--muted);
    font-size: 0.95rem;
  }

  .panel {
    display: grid;
    gap: 0.8rem;
    align-content: start;
    justify-items: center;
  }

  .headshot {
    width: 100%;
    max-width: 360px;
    border-radius: 18px;
    padding: 6px;
    background: linear-gradient(135deg, rgba(122, 215, 240, 0.35), rgba(199, 146, 234, 0.25));
    box-shadow: var(--glow);
  }

  .headshot img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 14px;
    border: 1px solid var(--border);
    background: rgba(255, 255, 255, 0.02);
  }

  @media (min-width: 840px) {
    .hero {
      grid-template-columns: 1.1fr 0.9fr;
      align-items: center;
    }
  }
</style>
