---
interface Props {
  title: string;
  subtitle?: string;
  level?: 1 | 2;
}

const { title, subtitle, level = 2 } = Astro.props;
---

<header class="section-header">
  <div>
    { 
      ()=> {
        if (level === 1) {
          return <h1>{title}</h1>;
        } else if (level === 2) {
          return <h2>{title}</h2>;
        } else {
          return <h3>{title}</h3>;
        }
      }
    }
    {subtitle && <p class="subtitle">{subtitle}</p>}
  </div>
</header>

<style>
  .section-header {
    margin: 2rem 0 1rem;
  }

  h1 {
    margin: 0 0 1.4rem;
    font-size: 2rem;
  }

  h2 {
    margin: 0 0 0.4rem;
    font-size: 1.6rem;
  }

  .subtitle {
    margin: 0;
    color: var(--muted);
  }
</style>
