---
interface Props {
  title: string;
  subtitle?: string;
  level?: 1 | 2 | 3;
}

const { title, subtitle, level = 2 } = Astro.props;
const Heading = `h${level}` as const;
---

<header class="section-header">
  <div>
    <!--<p class="eyebrow">Featured</p> -->
    <Heading>{title}</Heading>
    {subtitle && <p class="subtitle">{subtitle}</p>}
  </div>
</header>

<style>
  .section-header {
    margin: 2rem 0 1rem;
  }

  .eyebrow {
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--muted);
    font-size: 0.8rem;
    margin: 0 0 0.35rem;
  }

  h2 {
    margin: 0 0 0.4rem;
    font-size: 1.6rem;
  }

  .subtitle {
    margin: 0;
    color: var(--muted);
  }
</style>
