<div class="social">
  {socialLinks.map((link) => (
    <a class="pill" href={link.href} aria-label={link.label} rel="me noopener">
      <svg viewBox="0 0 24 24" aria-hidden="true" role="presentation">
        <g set:html={icons[link.icon]} />
      </svg>
      <span>{link.label}</span>
    </a>
  ))}
</div>

<style>
  .social {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.5rem 0.85rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    background: rgba(255, 255, 255, 0.03);
    color: var(--text);
  }

  svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }
</style>
