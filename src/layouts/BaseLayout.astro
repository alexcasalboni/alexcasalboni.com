---
import '@styles/global.css';

const siteUrl = 'https://www.alexcasalboni.com';
const {
  title = 'Alex Casalboni | Developer Advocate',
  description = 'Developer Advocate focused on serverless, community, and developer experience.',
  image = `${siteUrl}/favicon.svg`,
  canonical,
  lang = 'en',
} = Astro.props;

const canonicalUrl = canonical ?? `${siteUrl}${Astro.url?.pathname ?? ''}`;
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Alex Casalboni',
  url: siteUrl,
  sameAs: [
    'https://www.linkedin.com/in/alexcasalboni/',
    'https://twitter.com/alex_casalboni',
    'https://bsky.app/profile/alexcasalboni.bsky.social',
    'https://github.com/alexcasalboni',
    'https://dev.to/alexcasalboni',
  ],
  jobTitle: 'Developer Advocate',
  description,
};
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>{title}</title>
    <meta content={description} name="description" />
    <link href={canonicalUrl} rel="canonical" />

    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="website" property="og:type" />
    <meta content={canonicalUrl} property="og:url" />
    <meta content={image} property="og:image" />
    <meta content="summary_large_image" name="twitter:card" />
    <meta content={title} name="twitter:title" />
    <meta content={description} name="twitter:description" />
    <meta content={image} name="twitter:image" />

    <script set:html={JSON.stringify(structuredData)} type="application/ld+json"></script>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link href="/favicon.svg" rel="icon" />
  </head>
  <body>
    <slot />
  </body>
</html>
